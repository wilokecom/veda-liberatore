<section
  class="veda-lazyload pos:relative z:1 bgz:cover bgp:center"
  style="padding: 50px 0;"
>
  <div
    class="container"
  >
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 d:flex jc:center">
        <div
          class="w:100% maw:400px mih:100% d:flex fld:column jc:center"
        >
          <div
            class="w:100% maw:400px m:30px_auto"
          >
            <div class="pos:relative d:flex ai:center jc:space-between">
              <div class="d:flex fld:column w:100% ta:center">
                <h2 class="fw:500" style="text-align: start;">
                  {{ "veda.customer.reset_password.title" | t }}
                </h2>
                <div class="fz:16px" style="text-align: start;">
                  {{ 'veda.customer.reset_password.subtext' | t: email: customer.email }}        
                </div>
                <div component="heading" class="pt:20px fz:0" style="text-align: start;">
                  <div class="d:inline-block! w:50px h:2px bgc:color-gray3"></div>
                </div>
                <div component="heading" style="height: 20px;"></div>
              </div>
            </div>
            <div>
              {% form 'reset_customer_password' %}
                {% if form.errors %}
                  <div
                    class="d:flex ai:center fz:14px p:10px m:10px_0 bgc:color-error.1 c:color-error ls:none*ul p:0*ul m:0*ul"
                  >
                    <span><i class="far fa-exclamation-circle mr:10px"></i></span>
                    {{ form.errors | default_errors }}
                  </div>
                {% endif %}
                <div>
                  <label class="d:block mb:15px">
                    <span
                      class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px"
                    >
                      {{ "veda.customer.reset_password.password" | t }}
                    </span>
                    <input
                      class="rs w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none"
                      type="password"
                      name="customer[password]"
                      id="password"
                      autocomplete="new-password"
                    >
                  </label>
                  <label class="d:block">
                    <span
                      class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px"
                    >
                      {{ "veda.customer.reset_password.password_confirm" | t }}
                    </span>
                    <input
                      class="rs w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none"
                      type="password"
                      name="customer[password_confirmation]"
                      id="password_confirmation"
                      autocomplete="new-password"
                    >
                  </label>
                  <button type="submit" component="button" class="rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer  bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h p:13px_20px mt:25px w:100%">
                    <span class="mr:10px">
                      <i class="far fa-sign-out-alt"></i>    
                    </span>
                    <span>
                      {{ "veda.customer.reset_password.submit" | t }}
                    </span>
                  </button>
                </div>
              {% endform %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
