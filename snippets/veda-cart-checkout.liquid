          when 'secondary'
            assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'dark'
            assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
          when 'gray'
            assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          when 'light'
            assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          else
            assign variant_class = ' c:color-gray9 c:color-primary|h'
        endcase
      %}
      
      <button
        type="{{ 'submit' }}"
        {% if 'mini-cart-btn-submit-shipping-js d:inline-flex ai:center' %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'mini-cart-btn-submit-shipping-js d:inline-flex ai:center' }}"
        {% else %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
        {% endif %}
      >
        <span>
          {{ 'veda.sections.cart.estimate_shipping_rates' | t }}
        </span>
      </button>
      
      {% liquid
        if section.settings.cancel_button___variant == 'link'
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
        else
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
        endif
        
        assign default_for_bottom_class = ''
        
        case section.settings.cancel_button___variant
          when 'primary'
            assign variant_class = ' bgc:color-primary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'secondary'
            assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'dark'
            assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
          when 'gray'
            assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          when 'light'
            assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          else
            assign variant_class = ' c:color-gray9 c:color-primary|h'
        endcase
      %}
      
      <button
        type="button"
        {% if 'mini-cart-btn-cancel-action-js ml:10px' %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'mini-cart-btn-cancel-action-js ml:10px' }}"
        {% else %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
        {% endif %}
      >
        <span>
          {{ 'veda.sections.cart.cancel' | t }}
        </span>
      </button>
      
      <div class="mini-cart-shipping-value mt:15px fz:16px c:color-gray9"></div>
    </div>
    <div
      class="mini-cart-discount-js p:20px_0 w:100% h:fit-content bgc:color-light z:3 trs:0.3s d:none"
    >
      <label class="d:block mb:15px">
        <span
          class="d:block fz:18px fw:500 ff:font-secondary mb:10px"
        >
          {{ 'veda.sections.cart.add_discount_code' | t }}
        </span>
        <input
          form="cart-drawer-form"
          type="text"
          name="discount"
          class="rs w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray6||ph bgc:color-light bd:1px_solid_color-gray3 o:none"
        >
      </label>
      {% liquid
        if section.settings.submit_button___variant == 'link'
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
        else
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
        endif
        
        assign default_for_bottom_class = ''
        
        case section.settings.submit_button___variant
          when 'primary'
            assign variant_class = ' bgc:color-primary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'secondary'
            assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'dark'
            assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
          when 'gray'
            assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          when 'light'
            assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          else
            assign variant_class = ' c:color-gray9 c:color-primary|h'
        endcase
      %}
      
      <button
        type="{{ 'submit' }}"
        {% if 'mini-cart-btn-save-discount-js' %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'mini-cart-btn-save-discount-js' }}"
        {% else %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
        {% endif %}
      >
        <span>
          {{ 'veda.sections.cart.save' | t }}
        </span>
      </button>
      
      {% liquid
        if section.settings.cancel_button___variant == 'link'
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
        else
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
        endif
        
        assign default_for_bottom_class = ''
        
        case section.settings.cancel_button___variant
          when 'primary'
            assign variant_class = ' bgc:color-primary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'secondary'
            assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'dark'
            assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
          when 'gray'
            assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          when 'light'
            assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          else
            assign variant_class = ' c:color-gray9 c:color-primary|h'
        endcase
      %}
      
      <button
        type="{{ 'button' }}"
        {% if 'mini-cart-btn-cancel-action-js ml:10px' %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'mini-cart-btn-cancel-action-js ml:10px' }}"
        {% else %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
        {% endif %}
        
      >
        <span>
          {{ 'veda.sections.cart.cancel' | t }}
        </span>
      </button>
    </div>
    
    {% for block in section.blocks %}
      {% assign checkOutItem = block.settings %}
      
      {% case block.type %}
        {% when 'check_out_price' %}
          <div class="d:flex ai:center jc:space-between">
            <div class="mt:20px fz:15px ff:font-secondary fw:500">
              {{ 'veda.sections.cart.subtotal' | t }}
            </div>
            <span
              class="mt:20px fz:20px ff:font-secondary fw:500"
              
            >
              {{ cart.total_price | money }}
            </span>
          </div>
          <div>
            {% if cart.cart_level_discount_applications.size > 0 %}
              <ul class="p:0! ls:none" aria-label="{{ 'veda.customer.order.discount' | t }}">
                {% for discountItem in cart.cart_level_discount_applications %}
                  <li class="mt:5px fz:15px ff:font-secondary" data-css="{{ discountItem.discount_design.id }}">
                    {{ discountItem.title }}(-{{ discountItem.total_allocated_amount | money }})
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        {% when 'check_out_text' %}
          <div class="mt:10px fz:14px c:color-gray7" >
            {% if cart.taxes_included and shop.shipping_policy.body != blank %}
              {{ 'veda.sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
            {% elsif cart.taxes_included %}
              {{ 'veda.sections.cart.taxes_included_but_shipping_at_checkout' | t }}
            {% elsif shop.shipping_policy.body != blank %}
              {{
              'veda.sections.cart.taxes_and_shipping_policy_at_checkout_html'
              | t: link: shop.shipping_policy.url
              }}
            {% else %}
              {{ 'veda.sections.cart.taxes_and_shipping_at_checkout' | t }}
            {% endif %}
          </div>
        {% when 'check_out_button' %}
          {% liquid
            if checkOutItem.check_out___variant == 'link'
              assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
            else
              assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
            endif
            
            assign default_for_bottom_class = ''
            
            case checkOutItem.check_out___variant
              when 'primary'
                assign variant_class = ' bgc:color-primary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
              when 'secondary'
                assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
              when 'dark'
                assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
              when 'gray'
                assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
              when 'light'
                assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
              else
                assign variant_class = ' c:color-gray9 c:color-primary|h'
            endcase
          %}
          
          <button
            type="{{ 'submit' }}"
            component="{{ 'check_out' }}"
            {% if 'w:100% mt:20px' %}
              class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'w:100% mt:20px' }}"
            {% else %}
              class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
            {% endif %}
            {% if 'cart-drawer-form' %}
              form="{{ 'cart-drawer-form' }}"
            {% endif %}
            {% if 'checkout' %}
              name="{{ 'checkout' }}"
            {% endif %}
            {% if 'checkout' %}
              id="{{ 'checkout' }}"
            {% endif %}
            
          >
            <span>
              {{ "veda.sections.cart.checkout" | t }}
            </span>
          </button>
        {% else %}
      
      {% endcase %}
    {% endfor %}
  </div>
</div>
