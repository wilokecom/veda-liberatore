            assign variant_class = ' bgc:color-primary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'secondary'
            assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'dark'
            assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
          when 'gray'
            assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          when 'light'
            assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          else
            assign variant_class = ' c:color-gray9 c:color-primary|h'
        endcase
      %}
      
      <button
        type="button"
        {% if 'mini-cart-btn-cancel-action-js ml:10px ml:10px' %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'mini-cart-btn-cancel-action-js ml:10px ml:10px' }}"
        {% else %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
        {% endif %}
      >
        <span>
          {{ 'veda.sections.cart.cancel' | t }}
        </span>
      </button>
    </div>
    <div
      class="mini-cart-shipping-js p:20px_0 w:100% h:fit-content bgc:color-light z:3 trs:0.3s d:none"
    >
      <script type="application/json" class="{{ 'shipping-money-format-js' }}">
        {{ 100 | money }}
      </script>
      <label class="mini-cart-shipping-select-country-js d:block mb:15px">
        <span class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px">
          {{ 'veda.customer.addresses.country' | t }}
        </span>
        <select
          id="address-country-shipping"
          class="rs d:flex ai:center w:100% h:43px p:12px_15px bd:1px_solid_color-gray3 fz:pfs(12px,15px) c:color-gray7 cur:pointer"
          autocomplete="country"
        >
            {{ all_country_option_tags }}
        </select>
      </label>
      <label class="address-province-container-shipping d:block mb:15px" style="display:none">
        <span class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px">
          {{ 'veda.customer.addresses.province' | t }}
        </span>
        <select
          id="address-province-shipping"
          class="rs w:100% p:12px_15px fz:14px bd:1px_solid_color-gray3 o:none c:color-gray9 c:color-gray7||ph bgc:color-light"
          autocomplete="address-level1"
        ></select>
      </label>
      <label
          class="d:block mb:15px"
      >
        <span
            class="d:block fz:15px ff:font-secondary c:color-gray9 mb:4px"
        >
          {{ 'veda.customer.addresses.zip' | t }}
        </span>
        <input
            class="rs w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray7-freeze||ph bgc:color-light bd:1px_solid_color-gray3 o:none"
          type="{{ 'text' }}"
          name="{{ 'address[zip]' }}"
          {% if form.zip %}
            value="{{ form.zip }}"
          {% endif %}
          {% if 'postal-code' %}
            autocomplete="{{ 'postal-code' }}"
          {% endif %}
          {% if 'characters' %}
            autocapitalize="{{ 'characters' }}"
          {% endif %}
        >
      </label>
      
      {% liquid
        if section.settings.submit_button___variant == 'link'
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
        else
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
        endif
        
        assign default_for_bottom_class = ''
        
        case section.settings.submit_button___variant
