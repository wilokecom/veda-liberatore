<div class="cart-checkout-js w:100% d:flex jc:flex-end">
  <div class="w:100% maw:400px@400px">
    <div class="w:100% h:70px d:flex mt:20px bdb:1px_solid_color-gray3">
      
      {% for block in section.blocks %}
        {% assign actionItem = block.settings %}
        
        {% case block.type %}
          {% when 'actions_note' %}
            <div
              class="mini-cart-btn-note-js d:flex fld:column jc:center ai:center flxs:1 w:100% h:100% fz:pfs(13px,15px) c:color-gray9 bdr:1px_solid_color-gray3 bd:none!|lc cur:pointer bdrs:4px||be fz:13px||be"
              data-tooltip-position="top"
              data-tooltip-text="{{ 'veda.sections.cart.special_instrutions_for_seller' | t }}"
              
            >
              <span class="fz:18px" >
                <i class="far fa-pencil-alt"></i>
              </span>
              <span class="ff:font-secondary">{{ 'veda.sections.cart.note_title' | t }}</span>
            </div>
          {% when 'actions_shipping' %}
            <div
              class="mini-cart-btn-shipping-js d:flex fld:column jc:center ai:center flxs:1 w:100% h:100% fz:pfs(13px,15px) c:color-gray9 bdr:1px_solid_color-gray3 bd:none!|lc cur:pointer bdrs:4px||be fz:13px||be"
              data-tooltip-position="top"
              data-tooltip-text="{{ 'veda.sections.cart.estimate_shipping_rates' | t }}"
            >
              <span class="fz:18px" >
                <i class="far fa-shipping-fast"></i>
              </span>
              <span class="ff:font-secondary">{{ 'veda.sections.cart.shipping_title' | t }}</span>
            </div>
          {% when 'actions_discount' %}
            <div
              class="mini-cart-btn-discount-js d:flex fld:column jc:center ai:center flxs:1 w:100% h:100% fz:pfs(13px,15px) c:color-gray9 bdr:1px_solid_color-gray3 bd:none!|lc cur:pointer bdrs:4px||be fz:13px||be"
              
              data-tooltip-position="top"
              data-tooltip-text="{{ 'veda.sections.cart.add_discount_code' | t }}"
            >
              <span class="fz:18px" >
                <i class="far fa-percent"></i>
              </span>
              <span class="ff:font-secondary">{{ 'veda.sections.cart.coupon_code' | t }}</span>
            </div>
        
        {% endcase %}
      {% endfor %}
    </div>
    <div
      class="mini-cart-note-js p:20px_0 w:100% h:fit-content bgc:color-light z:3 trs:0.3s d:none"
    >
      <label class="d:block mb:15px">
        <span
          class="d:block fz:18px fw:500 ff:font-secondary c:color-gray9 mb:10px"
        >
          {{ 'veda.sections.cart.special_instrutions_for_seller' | t }}
        </span>
        <textarea
          name="note"
          class="rs mini-cart-note-js w:100% p:12px_15px fz:14px c:color-gray9 c:color-gray6||ph bgc:color-light bd:1px_solid_color-gray3 o:none"
          rows="4"
          placeholder="{{ 'veda.sections.cart.special_instrutions_for_seller' | t }}"
        >{{ cart.note }}</textarea>
      </label>
      {% liquid
        if section.settings.submit_button___variant == 'link'
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
        else
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
        endif
        
        assign default_for_bottom_class = ''
        
        case section.settings.submit_button___variant
          when 'primary'
            assign variant_class = ' bgc:color-primary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'secondary'
            assign variant_class = ' bgc:color-secondary c:color-light-freeze bgc:color-gray9|h c:color-light|h'
          when 'dark'
            assign variant_class = ' bgc:color-gray9 c:color-light bgc:color-primary|h c:color-light-freeze|h'
          when 'gray'
            assign variant_class = ' bgc:color-gray2 c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          when 'light'
            assign variant_class = ' bgc:color-light c:color-gray9 bgc:color-primary|h c:color-light-freeze|h'
          else
            assign variant_class = ' c:color-gray9 c:color-primary|h'
        endcase
      %}
      
      <button
        type="{{ 'submit' }}"
        {% if 'mini-cart-btn-save-note-js' %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }} {{ 'mini-cart-btn-save-note-js' }}"
        {% else %}
          class="{{ default_class }}{{ default_for_bottom_class }}{{ variant_class }}"
        {% endif %}
      >
        <span>
          {{ 'veda.sections.cart.save' | t }}
        </span>
      </button>
      
      {% liquid
        if section.settings.cancel_button___variant == 'link'
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 bd:0 bxsh:none p:0 bg:none cur:pointer trs:0.3s '
        else
          assign default_class = 'rs lh:1.5 fz:15px ff:font-primary fw:500 trs:0.3s p:13px_20px bd:none bxsh:none o:none cur:pointer '
        endif
        
        assign default_for_bottom_class = ''
        
        case section.settings.cancel_button___variant
