{%- style -%}
  .veda-page-content {
    padding: 20px 0;
    font-size: 16px;
  }
 .h1,h2,h3,h4,h5,h5,p {
   margin: 0 0 1em 0;
   line-height: 1.4;
 }
.veda-page-content img[style*="float:left"], .veda-page-content img[style*="float: left"] {
  margin-right: 20px;
}
.veda-page-content img[style*="float:right"], .veda-page-content img[style*="float: right"] {
  margin-left: 20px;
}
.veda-page-content blockquote {
  padding: 3px 0 3px 15px;
  border-left: 3px solid var(--color-gray2);
  font-size: 18px;
  font-style: italic;
  margin: 20px 30px;
}
.veda-page-content figcaption {
  display: block;
  text-align: center;
  margin: 5px 0px;
}
.veda-page-content figure {
  margin-left: 0;
  margin-right: 0;
}
.veda-page-content table {
  margin: 15px 0;
  font-size: 15px;
  max-width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
  margin: 0;
  padding: 0;
  border: 1px solid var(--color-gray3);
  box-shadow: none;
  caption-side: bottom;
}
.veda-page-content table th {
  font-weight: 600;
  text-align: left;
  padding: 15px;
  border: 1px solid var(--color-gray3);
  color: var(--color-gray9);
  font-family: var(--font-secondary);
  font-weight: 500;
}
.veda-page-content table td {
  padding: 15px;
  border: 1px solid var(--color-gray3);
}

{%- endstyle -%}
<div class="container">
  <div class="veda-page-content">
    <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ page.title | escape }}
    </h1>
    <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}
